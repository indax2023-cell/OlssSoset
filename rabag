loadstring([[
local P,U,T,R,TS=game:GetService("Players"),game:GetService("UserInputService"),game:GetService("TextChatService"),game:GetService("RunService"),game:GetService("TweenService")
local pl=P.LocalPlayer
local cam=workspace.CurrentCamera
local scale=math.min(cam.ViewportSize.X/1920, cam.ViewportSize.Y/1080)

-- GUI
local g=Instance.new("ScreenGui")
g.Name="ChatGUI"
g.ResetOnSpawn=false
g.Parent=pl:WaitForChild("PlayerGui")

local f=Instance.new("Frame",g)
f.Size=UDim2.new(0,380*scale,0,500*scale)
f.Position=UDim2.new(0.3,0,0.2,0)
f.BackgroundColor3=Color3.fromRGB(20,0,50)
f.BackgroundTransparency=0.2
f.BorderSizePixel=0
f.Visible=true

-- Космос-анимация
local sf=Instance.new("Frame",f); sf.Size=UDim2.new(1,0,1,0); sf.BackgroundTransparency=1
local stars={}
for i=1,120 do
    local s=Instance.new("Frame",sf)
    s.Size=UDim2.new(0,2*scale,0,2*scale)
    s.Position=UDim2.new(math.random(),0,math.random(),0)
    s.BackgroundColor3=Color3.fromRGB(200+math.random(55),100+math.random(100),255)
    s.BorderSizePixel=0
    s.BackgroundTransparency=math.random()
    table.insert(stars,{obj=s,speed=0.001+math.random()*0.003})
end
R.RenderStepped:Connect(function()
    for _,sd in ipairs(stars) do
        local s=sd.obj
        s.Position=s.Position+UDim2.new(0,0,sd.speed,0)
        if s.Position.Y.Scale>1 then s.Position=UDim2.new(math.random(),0,0,0) end
        s.BackgroundTransparency=0.2+0.5*math.sin(tick()*math.random()*5)
    end
end)

-- Заголовок
local title=Instance.new("TextLabel",f)
title.Text="BST"
title.Size=UDim2.new(1,0,0,35*scale)
title.Position=UDim2.new(0,0,0,0)
title.TextScaled=true
title.BackgroundTransparency=1
title.TextColor3=Color3.new(1,1,1)
title.Font=Enum.Font.GothamBold

-- Крестик
local cb=Instance.new("TextButton",f)
cb.Size=UDim2.new(0,50*scale,0,35*scale)
cb.Position=UDim2.new(1,-55*scale,0,0)
cb.BackgroundColor3=Color3.fromRGB(255,0,0)
cb.Text="X"
cb.TextColor3=Color3.new(1,1,1)
cb.TextScaled=true
cb.Font=Enum.Font.GothamBold
cb.Activated:Connect(function() f.Visible=false end)

local cl=Instance.new("TextLabel",f)
cl.Size=UDim2.new(0,150*scale,0,25*scale)
cl.Position=UDim2.new(1,-155*scale,0,35*scale)
cl.BackgroundTransparency=1
cl.Text="олсс хуеглот"
cl.TextColor3=Color3.new(1,1,1)
cl.TextScaled=true
cl.Font=Enum.Font.GothamBold

-- Страницы фраз с усиленной маскировкой + le le le…
local pages={
    {"п о п л a ч ь le le le le le le le","п i’ д o р a’ с’’ le le le le le le le","с ү к a’ le le le le le le le","т ү п i ц a’ le le le le le le le","д е б i л’ le le le le le le le","м ү д a к’ le le le le le le le","л о х’ le le le le л e le","е б a л a й’ le le le le le le le","һ ү й л о’ le le le le le le le le","м a т ь т в o ю’ le le le le le le le","с ш с ы н ш л ү х і’ le le le le le le le","ш л ү х a’ le le le le le le le"},
    {"т ы г e й’ le le le le le le le le","һ ү e г л о т’ le le le le le le le le le le ле","д о ч ь ш л ү х і д ш’ le le le le le le le le le","м о й һ ү й в a н a л e т в o e й м a м ы’ le le le le le le le","т г к и д a й ш a л a в a’ le le le le le le le le"},
    {"o ч к o т в о е й м a м ы ш и р о к о е’ le le le le le le le","у т в о е й м a м ы в o ч к е б о л ь ш о й ч л е н’ le le le le le le le","Ч и к a т и л о п р и й д е т д а р а с ч л е н и т ь т в о ю м a т ь н a к у с к и’ le le le le le le le"},
    {"Т в о я м a м a o б к у р е н н a я ш м a р a’ le le le le le le le","У д о м a ж д и я п р и й д у т в о ю м a м a ш y м e р т в у ю в o ч к o д р a т ь’ le le le le le le le","Ж д и с в о ю м a м y р а з р у б л е н н у ю н a к у с к и ш м a р у н и щ у ю’ le le le le le le le"},
    {"Ч и к a т и л о т в о ю м a м y н a п р о г и б і о р г a н ы ё об з е м л ю’ le le le le le le le","һ ү e г л o т с о с и і м a м a т в o я т о ж е’ le le le le le le le"}
}

local currentPage=1
local buttons={}

local function showPage(page)
    for _,b in pairs(buttons) do b:Destroy() end
    buttons={}
    local ph=pages[page]
    local pad=5*scale
    local h=(f.Size.Y.Offset-120*scale-pad*(#ph+1))/#ph
    for i,p in ipairs(ph) do
        local b=Instance.new("TextButton",f)
        b.Size=UDim2.new(0.9,0,0,h)
        b.Position=UDim2.new(0.05,0,0,70*scale+pad*i+h*(i-1))
        b.Text=p; b.TextScaled=true; b.TextWrapped=true
        b.BackgroundColor3=Color3.fromRGB(80,0,130)
        b.TextColor3=Color3.new(1,1,1)
        b.Font=Enum.Font.GothamBold
        b.Activated:Connect(function() pcall(function() T.TextChannels.RBXGeneral:SendAsync(p) end) end)
        table.insert(buttons,b)
    end
    leftButton.Visible = (currentPage>1)
    rightButton.Visible = (currentPage<#pages)
end

-- Боковые кнопки
local function createSideButton(text,posX)
    local btn=Instance.new("TextButton",f)
    btn.Size=UDim2.new(0,30*scale,0,60*scale)
    btn.Position=UDim2.new(posX,0,0.5,-30*scale)
    btn.Text=text; btn.TextScaled=true
    btn.BackgroundColor3=Color3.fromRGB(80,0,130)
    btn.TextColor3=Color3.new(1,1,1)
    btn.Font=Enum.Font.GothamBold
    return btn
end

leftButton=createSideButton("<",0)
rightButton=createSideButton(">",1)

leftButton.Activated:Connect(function()
    if currentPage>1 then
        currentPage=currentPage-1
        showPage(currentPage)
    end
end)

rightButton.Activated:Connect(function()
    if currentPage<#pages then
        currentPage=currentPage+1
        showPage(currentPage)
    end
end)

showPage(currentPage)

-- Перетаскивание
local drag,di,ds,sp
local function update(i)local d=i.Position-ds; f.Position=UDim2.new(sp.X.Scale,sp.X.Offset+d.X,sp.Y.Scale,sp.Y.Offset+d.Y) end
f.InputBegan:Connect(function(i) if i.UserInputType==Enum.UserInputType.MouseButton1 or i.UserInputType==Enum.UserInputType.Touch then drag=true; ds=i.Position; sp=f.Position; i.Changed:Connect(function() if i.UserInputState==Enum.UserInputState.End then drag=false end end) end end)
f.InputChanged:Connect(function(i) if i.UserInputType==Enum.UserInputType.MouseMovement or i.UserInputType==Enum.UserInputType.Touch then di=i end end)
U.InputChanged:Connect(function(i) if i==di and drag then update(i) end end)

-- Alt скрытие на ПК
U.InputBegan:Connect(function(i,gp) if gp then return end; if i.KeyCode==Enum.KeyCode.LeftAlt then f.Visible = not f.Visible end end)
]])()
